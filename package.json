{
  "name": "ReactNativeBoilerplate",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios --simulator 'iPhone 14'",
    "ios-device": "react-native run-ios --device 'iPhone 12'",
    "pod": "npx pod-install ios",
    "clean:android": "cd android && ./gradlew clean --warning-mode all && cd ..",
    "clean:ios": "cd ios && xcodebuild clean && cd ..",
    "release-apk": "cd android && ./gradlew assembleRelease  && cd ..",
    "release-aab": "cd android && ./gradlew bundleRelease && cd ..",
    "lint": "tsc --noEmit && eslint --fix ./src/**/*.{ts,tsx}",
    "pre-commit": "npm run format && npm run lint && npm run tsc",
    "format": "prettier --write **/*.{js,ts,tsx,json} && prettier --check **/*.{js,ts,tsx,json}",
    "start": "react-native start",
    "start-reset-cache": "npm run start -- --reset-cache",
    "test": "jest",
    "logcat": "adb logcat *:S ReactNative:V ReactNativeJS:V",
    "xcode": "cd ios && xed . && cd ..",
    "dev-clean": "rm -rf ~/Library/Developer/Xcode/DerivedData",
    "app:asset": "npx react-native-asset",
    "swagger-generator": "npx @rtk-query/codegen-openapi openapi-config.json",
    "deeplink-add-ios": "npx uri-scheme add ReactNativeBoilerplate --ios",
    "deeplink-add-android": "npx uri-scheme add ReactNativeBoilerplate --android",
    "deeplink-open-ios": "npx uri-scheme open ReactNativeBoilerplate:// --ios",
    "deeplink-open-android": "npx uri-scheme open ReactNativeBoilerplate:// --android",
    "prepare": "husky install"
  },
  "dependencies": {
    "@react-navigation/native": "^6.1.18",
    "@react-navigation/native-stack": "^6.10.1",
    "@reduxjs/toolkit": "^2.2.6",
    "i": "^0.3.7",
    "i18next": "^23.12.2",
    "moment": "^2.30.1",
    "npm": "^10.8.2",
    "react": "18.2.0",
    "react-i18next": "^15.0.0",
    "react-native": "0.74.3",
    "react-native-calendars": "^1.1305.0",
    "react-native-config": "^1.5.2",
    "react-native-device-info": "^11.1.0",
    "react-native-mmkv": "^2.12.2",
    "react-native-permissions": "^4.1.5",
    "react-native-safe-area-context": "^4.10.8",
    "react-native-screens": "^3.32.0",
    "react-redux": "^9.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.20.0",
    "@babel/preset-env": "^7.20.0",
    "@babel/runtime": "^7.20.0",
    "@eslint/js": "^9.7.0",
    "@react-native/babel-preset": "^0.74.84",
    "@react-native/eslint-config": "^0.74.84",
    "@react-native/metro-config": "^0.74.84",
    "@react-native/typescript-config": "^0.74.84",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.6",
    "@types/react-test-renderer": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "babel-jest": "^29.7.0",
    "babel-plugin-module-resolver": "^5.0.2",
    "eslint": "9.x",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-promise": "^6.2.0",
    "eslint-plugin-react": "^7.35.0",
    "eslint-plugin-unused-imports": "^4.0.0",
    "globals": "^15.8.0",
    "husky": "^9.1.1",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "prettier": "3.3.3",
    "react-native-obfuscator": "^1.0.0",
    "react-test-renderer": "18.2.0",
    "typescript": "5.5.4",
    "typescript-eslint": "^7.17.0"
  },
  "engines": {
    "node": ">=18"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "lint-staged": {
    "src/**/*.{ts,tsx}": [
      "npm run lint",
      "npm run tsc"
    ],
    "./src/**": [
      "npm run format"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
